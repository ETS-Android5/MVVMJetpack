<?xml version="1.0" encoding="utf-8"?>
<com.elab.libview.scollview.LockableNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.android.xg.timeaxis.TimeAxisContainer
            android:id="@+id/time_axis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.android.xg.timeaxis.TimeAxisContainer>




        <com.android.xg.hikvision.HikVisionVideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.android.xg.hikvision.HikVisionVideoView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doPreView"
                android:text="doP" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="stopPreView"
                android:text="stopP" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="pausePreView"
                android:text="pause" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resumePreView"

                android:text="resume" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_50"
                android:layout_height="wrap_content"
                android:onClick="doPreViewPb"
                android:text="Pb" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_50"
                android:layout_height="wrap_content"
                android:onClick="stopPreViewPb"
                android:text="sPb" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_64"
                android:layout_height="wrap_content"
                android:onClick="pausePreViewPb"
                android:text="pab" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_50"
                android:layout_height="wrap_content"
                android:onClick="resumePreViewPb"

                android:text="rb" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_50"
                android:layout_height="wrap_content"
                android:onClick="fastPreViewPb"

                android:text="fb" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/space_50"
                android:layout_height="wrap_content"
                android:onClick="slowPreViewPb"

                android:text="sb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="size"
                android:text="size" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="file"
                android:text="file" />


        </LinearLayout>


    </LinearLayout>
</com.elab.libview.scollview.LockableNestedScrollView>
